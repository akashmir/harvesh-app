# Ultra Crop Recommender - Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5020
DEBUG=false
MODEL_PATH=./models
CACHE_TTL=3600

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Get your API key from: https://soilgrids.org/
SOIL_GRIDS_API_KEY=your_soil_grids_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Configuration
POSTGRES_DB=ultra_crop
POSTGRES_USER=ultra_crop_user
POSTGRES_PASSWORD=ultra_crop_secure_password_2024
DATABASE_URL=postgresql://ultra_crop_user:ultra_crop_secure_password_2024@postgres:5432/ultra_crop

# SQLite Configuration (for development)
SQLITE_DATABASE_URL=sqlite:///ultra_crop_development.db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key for production
SECRET_KEY=ultra-crop-secret-key-2024-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend API URL for frontend
ULTRA_CROP_API_BASE_URL=http://localhost:5020

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (in seconds)
CACHE_TTL=3600
CACHE_PREFIX=ultra_crop

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=ultra_crop_api.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
# Model retraining schedule (in hours)
MODEL_RETRAIN_HOURS=24

# Model confidence threshold
MODEL_CONFIDENCE_THRESHOLD=0.7

# Feature scaling
ENABLE_FEATURE_SCALING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
VERSION=1.0.0
DEPLOYMENT_REGION=us-east-1

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Local storage
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ultra-crop-uploads
AWS_REGION=us-east-1

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ML_PREDICTIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_MULTILINGUAL=true
ENABLE_SATELLITE_DATA=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_MARKET_ANALYSIS=true
